<?xml version="1.0" encoding="utf-8"?>
<layout>

	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="14dp"
		android:background="@drawable/shape_circle_corner_white_big">

		<TextView
			android:id="@+id/item_direction_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="计算机专业："
			android:textSize="12sp"
			android:textColor="@color/text_111111"
			android:layout_marginLeft="26dp"
			android:layout_marginRight="26dp"
			android:layout_marginTop="14dp"/>

		<com.nex3z.flowlayout.FlowLayout
			android:id="@+id/item_direction_flow_layout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			app:flChildSpacing="34dp"
			app:flRowSpacing="10dp"
			android:layout_marginBottom="10dp"/>
	</LinearLayout>
</layout>
